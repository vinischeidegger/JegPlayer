<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="40dp"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/list_item_music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/black"
        android:text="bensoundtheelevatorbossanova" />

    <TextView
        android:id="@+id/list_item_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_music_name"
        android:layout_marginTop="5dp"
        android:text="Brazil"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/list_item_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/flag_brazil" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center">

        <TextView
            android:id="@+id/list_item_length_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Length: "
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/list_item_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4:00"
            android:textAppearance="?android:attr/textAppearanceButton"
            android:textColor="@android:color/black" />

    </LinearLayout>

</RelativeLayout>